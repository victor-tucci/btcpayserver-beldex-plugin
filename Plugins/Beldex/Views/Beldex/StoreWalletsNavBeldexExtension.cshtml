@using BTCPayServer.Plugins.Beldex.Configuration
@using BTCPayServer.Plugins.Beldex.Controllers
@using BTCPayServer.Abstractions.Contracts
@inject SignInManager<ApplicationUser> SignInManager;
@inject BeldexLikeConfiguration BeldexLikeConfiguration;
@inject IScopeProvider ScopeProvider
@inject UIBeldexLikeStoreController UIBeldexLikeStore;
@{
    var storeId = ScopeProvider.GetCurrentStoreId();

}
@if (SignInManager.IsSignedIn(User) && User.IsInRole(Roles.ServerAdmin) && BeldexLikeConfiguration.BeldexLikeConfigurationItems.Any())
{
    var store = Context.GetStoreData();
    var result = await UIBeldexLikeStore.GetVM(store);

    foreach (var item in result.Items)
    {
        
        var isActive = !string.IsNullOrEmpty(storeId) && ViewContext.RouteData.Values.TryGetValue("Controller", out var controller) && controller is not null &&
                       nameof(UIBeldexLikeStoreController).StartsWith(controller.ToString() ?? string.Empty, StringComparison.InvariantCultureIgnoreCase) &&
                       ViewContext.RouteData.Values.TryGetValue("cryptoCode", out var cryptoCode) && cryptoCode is not null && cryptoCode.ToString() == item.CryptoCode;
        <li class="nav-item">
            <a class="nav-link @(isActive? "active" : "")"
               asp-route-cryptoCode="@item.CryptoCode"
               asp-route-storeId="@storeId"
               asp-action="GetStoreBeldexLikePaymentMethod"
               asp-controller="UIBeldexLikeStore">
                <span class="me-2 btcpay-status btcpay-status--@(item.Enabled ? "enabled" : "pending")"></span>
                <span>@item.CryptoCode Wallet</span>
            </a>
        </li>
    }
}
